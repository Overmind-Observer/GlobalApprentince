<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Global_Intern</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="http://fontawesome.github.io/Font-Awesome/assets/font-awesome/css/font-awesome.css">
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
           
                <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img src="img/Tech.png" alt="logo" height="55" /></a>
            
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <div class="navbar-nav mr-auto">
					<div class="nav" style="grid-row-start:auto; float:left">
						<p class="nav-item" style="margin:auto">
							<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home<span class="sr-only">(current)</span></a>
						</p>

						<p class="nav-item" style="margin:auto">
							<a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
						</p>
						<!--
	<li class="nav-item">
		<a class="nav-link" asp-area="" asp-controller="Internship" asp-action="Create">Create Internship</a>
	</li>
	-->

						<p class="dropdown, nav-item" style="margin:auto">
							<a class="nav-link dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Careers</a>
							<div class="dropdown-menu">
								<a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="CurrentVacancies">Current Vacancies</a>
								<a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="OurBenefits">Our Benefits</a>
							</div>
						</p>

						<p class="nav-item" style="margin:auto">
							<a class="nav-link" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact</a>
						</p>
					</div>

                </div>
                <div class="userControlles" style="float:right">
                    @if (ViewData["LoggeduserName"] != null)
                    {
                        <div class="d-flex">
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item d-flex">
                                    @{
                                        var userInfo = ViewData["LoggeduserName"] as List<string>;
                                    }

                                    @if (userInfo[1] != null)
                                    {
                                        <img class="circleImg" src="~/uploads/UserImage/@userInfo[1]" alt="Avatar">
                                    }
                                    else
                                    {
                                        <img class="circleImg" src="~/uploads/defaut-person.png" alt="Avatar">
                                    }

                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">@userInfo[0]</a>

                                </li>
                            </ul>
                            <button class="btn btn-success my-2 my-sm-0" asp-controller="Account" asp-action="Logout">Logout</button>
                        </div>
                    }
                    else
                    {
                        
                        <p class="dropdown, nav-item" style="margin:auto;">


                            <a style="width:100px;" class="btn btn-primary mr-1" asp-controller="Account" asp-action="Login">Log In</a>

                            <a style="width:100px;" class="btn btn-primary" asp-controller="Account" asp-action="Register">Sign Up</a>
                        </p>

                    }
                </div>
            </div>
        </nav>
    </header>
    <main style="margin-bottom:7%">

        @RenderBody()

    </main>
     
    <footer class="footer text-muted bg-dark fixed-bottom">

        <div class="form-inline" style="margin-bottom:1%; margin-top:1%">

            <div class="form-inline" style="margin-right:auto; margin-left:auto">

                <a asp-area="" asp-controller="Home" asp-action="Privacy">&copy; 2020 - Global Apprentince & Intern - Privacy</a>
            </div>

            <div class="form-inline" style="margin-right:auto; margin-left:auto">

                <a href="https://www.facebook.com">
                    <img src="img/fb_icon.ico" alt="SocialMedia1" height="30" width="30" />
                </a>
                <a href="https://www.twitter.com">
                    <img src="img/twitter.ico" alt="SocialMedia2" height="30" width="30" />
                </a>
                <a href="https://www.linkedin.com">
                    <img src="img/linkedin.ico" alt="SocialMedia3" height="30" width="30" />
                </a>
                <a href="https://www.youtube.com">
                    <img src="img/youtube.ico" alt="SocialMedia4" height="30" width="30" />
                </a>

            </div>

            <div class="form-inline" style="margin-right:auto; margin-left:auto">
                <input class="form-control mr-sm-2" type="search" placeholder="Your Email" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Subscribe</button>
            </div>

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
