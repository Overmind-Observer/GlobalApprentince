@{
	ViewData["Title"] = "Qualifications";
	Layout = "~/Views/Shared/_LayoutDashboardStudent.cshtml";
}




<div class="content">
    <main>
        <div class="container-fluid" style="margin-top:56px;">
			<div id="GeneralProfile" asp-action="GeneralProfile" enctype="multipart/form-data" method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>

				<h2>"Qualifications</h2>

				<p>
					@Html.ActionLink("Add Qualifcation", "Create")
				</p>

				<p>Add your relevant qualifications here.</p>

