@model Global_Intern.Models.AccountLogin

@{
    ViewData["Title"] = "Login";
}

<!-- Page Content
================================================== -->
<div class="margin-top-70">
    <div class="container">
        <div class="row">
            <div class="col-xl-5 offset-xl-3">
                <div class="login-register-page">
                    <!-- Welcome Text -->
                    <div class="welcome-text">
                        <h3>Log in to your account</h3>
                        <span>Don't have an account? <a href="/Account/RegisterStudent">Sign Up!</a></span>
                    </div>

                    <!-- Form -->
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="input-with-icon-left">
                            <h5 id="tttEmail"></h5>
                            <i class="icon-material-baseline-mail-outline"></i>
                            <input required asp-for="Email" id="EmailInput" type="email" class="input-text with-border" placeholder="Your Email" />
                            <label asp-for="Email" hidden class="control-label"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="input-with-icon-left">
                            <h5 id="tttpassword"></h5>
                            <i class="icon-material-outline-lock"></i>
                            <input asp-for="Password" type="password" class="input-text with-border" id="PasswordInput" placeholder="Password" required />
                            <label asp-for="Password" hidden class="control-label"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="col-xl-12">
                            <div class="checkbox right-side">
                                <input type="checkbox" id="remember-me">
                                <label for="remember-me"><span class="checkbox-icon"></span>@Html.DisplayNameFor(model => model.RememberMe)</label>
                            </div>
                            <div class="checkbox right-side">
                                <a href="#" class="forgot-password">Forgot Password?</a>
                            </div>
                        </div>

                        <!-- Button -->
                        <input type="submit" class="button full-width button-sliding-icon ripple-effect margin-top-10" value="Login">

                    </form>
                    <!-- Social Login -->
                    <!-- <div class="social-login-separator"><span>or</span></div>
             <div class="social-login-buttons">
                 <button class="facebook-login ripple-effect"><i class="icon-brand-facebook-f"></i> Log In via Facebook</button>
                 <button class="google-login ripple-effect"><i class="icon-brand-google-plus-g"></i> Log In via Google+</button>
             </div> -->

                </div>
            </div>
        </div>
    </div>
</div>
<!-- Spacer -->
<script>
    var placeHolderEmail = document.getElementById("tttEmail");
    var placeHolderPass = document.getElementById("tttpassword");
    var inputEmail = document.getElementById("emailInput");
    var inputPass = document.getElementById("passwordInput");
    inputEmail.addEventListener('focus', () => {
        placeHolderEmail.innerText = "";
    });
    inputPass.addEventListener('focus', () => {
        placeHolderPass.innerText = "";
    });
    inputEmail.addEventListener('blur', () => {
        if (inputEmail.value == "") {
            placeHolderEmail.innerText = "Your Email";
        }

    });
    inputPass.addEventListener('blur', () => {
        if (inputPass.value == "") {
            placeHolderPass.innerText = "Password";
        }
    });
</script>
